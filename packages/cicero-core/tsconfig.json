    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true
  },
  "include": ["./index.js", "./src/**/*"],
}
